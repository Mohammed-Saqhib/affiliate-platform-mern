{
  "name": "affiliate-platform-mern",
  "version": "1.0.0",
  "description": "MERN Stack Affiliate Platform",
  "main": "api/index.js",
  "scripts": {
    "build": "node build.js",
    "build:backend": "cd backend && npm install --production --no-optional",
    "build:frontend": "cd frontend && npm install --no-optional && npm run build:ci",
    "start": "node backend/server.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd backend && npm run dev",
    "client": "cd frontend && npm start",
    "postbuild": "echo 'Build completed successfully'"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.1.4",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.0",
    "shortid": "^2.2.16"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
